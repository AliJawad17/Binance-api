                        <td><%= order.sellprice %></td>
                        <td><%= order.amount %></td>
                        <td>
                            <!-- <a href="/updateOrder/<%= order._id %>" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a> -->
                            <a href="/statusOrder/<%= order._id %>" class="btn btn-sm btn-success"><i class="fa fa-eye"></i></a>
                            <a href="/deleteOrder/<%= order._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            
                        </td>
                    </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td>No data found</td>
                    </tr>
                <% } %>
            </tbody>
            </table>
    </div>
