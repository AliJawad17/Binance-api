<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4 class="font-weight-bold">All Configurations</h4>
            </div>
            <div class="col-4">
                <a href="/addConf" class="btn btn-success float-right"><i class="fa fa-plus mr-1"></i> Add Conf</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">API Key</th>
                    <th scope="col">Secret Key</th>
                    <th scope="col">Margin</th>
                    <th scope="col">Leverage</th>
                    <th scope="col">Balance Buffer</th>
                </tr>
            </thead>
            <tbody>
                <% if(confs.length > 0) { %>
                    <% for(let conf of confs) { %>
                    <tr>
                        <td><%= conf.apiKey %></td>
                        <td><%= conf.secretKey %></td>
                        <td><%= conf.margin %></td>
                        <td><%= conf.leverage %></td>
                        <td><%= conf.balanceBuffer %></td>
                        <td>
                            <a href="/updateConf/<%= conf._id %>" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                            <a href="/deleteConf/<%= conf._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td>No data found</td>
                    </tr>
                <% } %>
            </tbody>
            </table>
    </div>
</div>
