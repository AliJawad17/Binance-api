<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4 class="font-weight-bold">All Orders</h4>
            </div>
            <div class="col-4">
                <a href="/addOrder" class="btn btn-success float-right"><i class="fa fa-plus mr-1"></i> Add Order</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Token Name</th>
                    <th scope="col">Buy Price</th>
                    <th scope="col">Stop Loss</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length > 0) { %>
                    <% for(let order of orders) { %>
                    <tr>
                        <th scope="row"><%= order.tokenname %></th>
                        <td><%= order.buyprice %></td>
                        <td><%= order.stoploss %></td>
                        <td>
                            <a href="/updateOrder/<%= order._id %>" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                            <a href="/deleteOrder/<%= order._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td>No data found</td>
                    </tr>
                <% } %>
            </tbody>
            </table>
    </div>
</div>
